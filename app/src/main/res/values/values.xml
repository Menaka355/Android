<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="colorAccent">@color/gray</item>
    </style>

    <!-- Style for the outer TextInputLayout -->
    <style name="LoginTextInputOuterFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <!-- Style for the inner TextInputEditText -->
    <style name="LoginTextInputInnerFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.Material.EditText">
        <item name="android:textColorHint">@color/darker_gray</item>
    </style>

</resources>
